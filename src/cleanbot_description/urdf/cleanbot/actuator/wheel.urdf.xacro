<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">
<xacro:include filename="$(find cleanbot_description)/urdf/cleanbot/common_inertia.xacro"/>
   <xacro:macro name="wheel_xacro" params="wheel_name xyz">
        <!--IMU部件-->
        <link name="${wheel_name}_link">
            <!-- Visual representation of the base link -->
            <visual>
                <!--沿着自己几何中心的偏移和旋转-->
                <origin xyz="0 0 0" rpy="1.57079 0 0"/>
                <!--几何形状-->
                <geometry>
                    <cylinder radius="0.032" length="0.015"/>
                </geometry>
                <!--材质-->
                <material name="black">
                    <color rgba="0 0 0 0.8"/>
                </material>
            </visual>
            <collision>
                <origin xyz="0 0 0" rpy="1.57079 0 0"/>
                <geometry>
                    <cylinder radius="0.032" length="0.015"/>
                </geometry>
                <material name="black">
                    <color rgba="0 0 0 0.8"/>
                </material>
            </collision>
            <xacro:cylinder_inertia m="0.05" r="0.032" h="0.015"/>
        </link>

        <!--定义关节：base_link到imu_link-->
        <joint name="${wheel_name}_joint" type="continuous">
            <parent link="base_link"/>
            <child link="${wheel_name}_link"/>
            <origin xyz="${xyz}" rpy="0 0 0"/>
            <axis xyz="0.0 1 0.0"/>
        </joint>

        <gazebo reference="${wheel_name}_link">
            <material>Gazebo/Black</material>
            <mu1 value="20.0"/>
            <mu2 value="20.0"/>
            <kp value="1000000000.0"/>
            <kd value="1.0"/>
        </gazebo>

   </xacro:macro>
    
</robot>